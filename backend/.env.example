# Unity Wallet Backend Environment Configuration

# Application Settings
APP_NAME=Unity Wallet API
APP_VERSION=1.0.0
ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
APP_PORT=8001

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=unity_wallet_user
POSTGRES_PASSWORD=your_secure_database_password
POSTGRES_DB=unity_wallet

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6380

# JWT Authentication - CRITICAL: Generate a secure random key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_32_CHAR_STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_DRY_RUN=true
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECURITY_KEY=your-security-key-for-additional-operations

# Cache TTL Settings (in seconds)
QUOTE_CACHE_TTL=60
PATH_CACHE_TTL=30
SESSION_CACHE_TTL=3600
IDEMPOTENCY_CACHE_TTL=3600
QR_CACHE_TTL=600